    #[traced_test]
    fn test_redundant_enum_metadata_scenarios() {
        trace!("Testing fix_redundant_enum_metadata.");

        let input = json!({
            "mode": {
                "variants": [
                    { "variant_name": "Off", "variant_confidence": 0.0 },
